<div class="container">
    <h1>Pages#index</h1>
    <p>Find me in app/views/pages/index.html.erb</p>
    <form action="/pages/create" methods= "get">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Nombre del Proyecto</label>
            <input name="name" type="text" class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Descripción</label>
            <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="row">
            <div class="mb-3 col-4">
                <label for="formGroupExampleInput" class="form-label">Fecha de Incio</label>
                <input name="start_date" type="text" class="form-control" id="formGroupExampleInput">
            </div>
            <div class="mb-3 col-4">
                <label for="formGroupExampleInput2" class="form-label">Fecha de Término</label>
                <input name="end_date" type="text" class="form-control" id="formGroupExampleInput2">
            </div>
            <select name="status" class="form-select col-4" aria-label="Default select example">
                <option value="Propuesta" selected>Propuesta</option>
                <option value="En Progreso">En Progreso</option>
                <option value="Terminado">Terminado</option>
            </select>
        </div>
        <button type="submit" class="btn btn-warning mt-3">Crear</button>
    </form>
</div>
